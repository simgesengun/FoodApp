<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:navigationBarColor">@color/racoon</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">@color/back_start_color</item>
    </style>
    <style name="MyTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="android:textColorPrimary">@color/dark_text_color</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:width">40dp</item>
        <item name="android:tint">@color/dark_text_color</item>
    </style>
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
    <item name="android:tint">@color/dark_text_color</item>
</style>
    <style name="Base.V7.Widget.AppCompat.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:paddingTop">24dp</item>
        <item name="contentInsetStart">20dp</item>
    </style>
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/racoon</item>
    </style>

    <style name="TextView.CardDesign" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="fontFamily">@font/nobile_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextView.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/nobile</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextView.CardDesign.Small" parent="TextView.CardDesign">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextView.h1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nobile</item>
    </style>
    <style name="TextView.h1.Bold" parent="TextView.h1">
        <item name="fontFamily">@font/nobile_bold</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/orange</item>
        <item name="cornerRadius">5dp</item>
    </style>
</resources>